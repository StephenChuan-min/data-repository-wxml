.mine-container {
  height: 100%;
}
.mine-container-main {
  height: 200rpx;
  background: #296dd3;
  margin-bottom: 200rpx;
  position: relative;
}
.mine-container-main-card {
  position: absolute;
  background: #fff;
  width: 80%;
  left: 10%;
  height: 200rpx;
  top: 100rpx;
  border-radius: 16rpx;
  text-align: center;
}
.mine-container-main-card .avatar {
  display: inline-block;
  margin-top: -60rpx;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  background: #fff;
  border: 6rpx solid #eeeeee;
}
